            "title": "Traffic Flow per Sensor",
            "type": "timeseries",
            "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
            "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
                    "sql": "SELECT\n  report_hour AS \"time\",\n  device_id::text AS metric,\n  avg_volume\nFROM hourly_avg_volume\nWHERE $__timeFilter(report_hour)\nORDER BY 1,2"
                }
            ]
        },
        {
            "id": 3,
            "title": "Daily Peak Volume",
            "type": "barchart",
            "gridPos": { "h": 9, "w": 12, "x": 0, "y": 9 },
            "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
                    "sql": "SELECT\n  report_date AS \"time\",\n  peak_volume\nFROM daily_peak_volume\nWHERE report_date BETWEEN $__timeFrom()::date AND $__timeTo()::date\nORDER BY report_date;"
                }
            ]
        },
        {
            "id": 4,
            "title": "Daily Average Volume",
            "type": "barchart",
            "gridPos": { "h": 9, "w": 12, "x": 12, "y": 9 },
            "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "DS_POSTGRESQL-TRAFFIC" },
                    "sql": "SELECT\n  DATE(report_hour) AS report_date,\n  AVG(avg_volume) AS daily_avg_volume\nFROM hourly_avg_volume\nWHERE $__timeFilter(report_hour)\nGROUP BY DATE(report_hour)\nHAVING DATE(report_hour) BETWEEN $__timeFrom()::date AND $__timeTo()::date\nORDER BY report_date;"
                }
            ]
        },
