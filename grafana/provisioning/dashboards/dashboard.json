    "panels": [
        {
            "id": 2,
            "title": "Traffic Flow per Sensor (Hourly Avg)",
            "type": "timeseries",
            "gridPos": { "h": 9, "w": 24, "x": 0, "y": 6 },
            "timeFrom": "6h",
            "datasource": { "type": "postgres", "uid": "postgres_ds" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "postgres_ds" },
                    "rawSql": "SELECT\n  $__timeGroup(report_hour, '1h') AS \"time\",\n  device_id::text AS metric,\n  AVG(avg_volume) AS value\nFROM hourly_avg_volume\nWHERE $__timeFilter(report_hour + interval '1 hour')\nGROUP BY 1, 2\nORDER BY 1, 2"
                }
            ]
            ,"options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "single"}},
            "fieldConfig": {"defaults": {"custom": {"drawStyle": "line", "lineInterpolation": "linear", "lineWidth": 2, "showPoints": "always"}}}
        },
        {
            "id": 3,
            "title": "Daily Peak Volume",
            "type": "barchart",
            "gridPos": { "h": 9, "w": 12, "x": 0, "y": 9 },
            "datasource": { "type": "postgres", "uid": "postgres_ds" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "postgres_ds" },
                    "rawSql": "SELECT\n  report_date AS \"time\",\n  peak_volume AS value\nFROM daily_peak_volume\nWHERE report_date = CURRENT_DATE\nORDER BY report_date;"
                }
            ]
        },
        {
            "id": 4,
            "title": "Daily Average Volume",
            "type": "barchart",
            "gridPos": { "h": 9, "w": 12, "x": 12, "y": 9 },
            "datasource": { "type": "postgres", "uid": "postgres_ds" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "postgres_ds" },
                    "rawSql": "SELECT\n  DATE(report_hour) AS \"time\",\n  AVG(avg_volume) AS value\nFROM hourly_avg_volume\nWHERE report_hour >= NOW() - INTERVAL '1 day'\nGROUP BY DATE(report_hour)\nORDER BY \"time\";"
                }
            ]
        },
        {
            "id": 5,
            "title": "Daily Sensor Availability (Table)",
            "type": "table",
            "gridPos": { "h": 9, "w": 12, "x": 0, "y": 18 },
            "datasource": { "type": "postgres", "uid": "postgres_ds" },
            "targets": [
                {
                    "refId": "A",
                    "format": "table",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "postgres_ds" },
                    "rawSql": "SELECT\n  report_date AS \"time\",\n  device_id,\n  availability_pct AS value\nFROM daily_sensor_availability\nWHERE report_date = CURRENT_DATE\nORDER BY report_date, device_id;"
                }
            ]
        },
        {
            "id": 6,
            "title": "Availability â€” Device 7038 (Gauge)",
            "type": "gauge",
            "gridPos": { "h": 9, "w": 12, "x": 12, "y": 18 },
            "datasource": { "type": "postgres", "uid": "postgres_ds" },
            "targets": [
                {
                    "refId": "A",
                    "format": "time_series",
                    "rawQuery": true,
                    "datasource": { "type": "postgres", "uid": "postgres_ds" },
                    "rawSql": "SELECT\n  report_date AS \"time\",\n  availability_pct AS value\nFROM daily_sensor_availability\nWHERE device_id = '7038' AND report_date = CURRENT_DATE\nORDER BY report_date;"
                }
            ]
        }
    ],
